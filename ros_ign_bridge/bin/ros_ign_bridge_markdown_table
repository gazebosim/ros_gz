#!/usr/bin/env python3

import os
import sys

# add ros_ign_bridge to the Python path
ros_ign_bridge_root = os.path.join(os.path.dirname(__file__), '..')
sys.path.insert(0, os.path.abspath(ros_ign_bridge_root))

from ros_ign_bridge import mappings 


def main():
    rows = []
    rows.append(f'| {"ROS type":32}| {"Ignition Transport Type":32}|')
    rows.append(f'|{"-":-<33}|:{"-":-<31}:|')

    for mapping in mappings():
        rows.append('| {:32}| {:32}|'.format(
            mapping.ros2_package_name + '/' + mapping.ros2_message_name,
            mapping.ign_string()))
    print('\n'.join(rows))


if __name__ == '__main__':
    sys.exit(main())
