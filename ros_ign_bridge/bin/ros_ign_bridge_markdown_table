import argparse
import os
import sys

# add ros_ign_bridge to the Python path
ros_ign_bridge_root = os.path.join(os.path.dirname(__file__), '..')
sys.path.insert(0, os.path.abspath(ros_ign_bridge_root))

from ros_ign_bridge import mappings 

def main(argv=sys.argv[1:]):
    parser = argparse.ArgumentParser(
        description='Generate Markdown table of supported messages.',
        formatter_class=argparse.ArgumentDefaultsHelpFormatter)
    parser.add_argument(
        '--gz-msgs-ver',
        required=False,
        default="0.0.0",
        help='Gazebo messages version')

    args = parser.parse_args(argv)
    msgs_ver = tuple(map(int, args.gz_msgs_ver.split('.')))

    rows = []
    rows.append(f'| {"ROS type":32}| {"Ignition Transport Type":32}|')
    rows.append(f'|{"-":-<33}|:{"-":-<31}:|')

    for mapping in mappings(msgs_ver):
        rows.append('| {:32}| {:32}|'.format(
            mapping.ros2_package_name + '/' + mapping.ros2_message_name,
            mapping.ign_string()))
    print('\n'.join(rows))


if __name__ == '__main__':
    sys.exit(main())
