<?xml version="1.0"?>
<launch>
  <arg name="args" default=""/>

  <env name="IGN_GAZEBO_SYSTEM_PLUGIN_PATH" value="$(optenv LD_LIBRARY_PATH)" />

  <node
    pkg="ros_ign_gazebo_demos"
    type="ign_gazebo"
    name="ign_gazebo"
    output="screen"
    required="true"
    args="$(arg args)">
  </node>
</launch>
