<?xml version="1.0"?>
<launch>

  <include file="$(find ros1_ign_gazebo_demos)/launch/ign_gazebo.launch">
    <arg name="args" value="-r -v 3 sensors_demo.sdf"/>
  </include>

  <node
    pkg="ros1_ign_bridge"
    type="parameter_bridge"
    name="$(anon ros1_ign_bridge)"
    output="screen"
    args="/rgbd_camera/image@sensor_msgs/Image@ignition.msgs.Image /rgbd_camera/depth_image@sensor_msgs/Image@ignition.msgs.Image /rgbd_camera/points@sensor_msgs/PointCloud2@ignition.msgs.PointCloudPacked">
  </node>

  <node
    type="rviz"
    name="rviz"
    pkg="rviz"
    args="-d $(find ros1_ign_gazebo_demos)/rviz/rgbd_camera_bridge.rviz" />
</launch>
